generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
}

model UserProfile {
  id        Int      @id @default(autoincrement())
  authId    Int?     @unique
  createdAt DateTime @default(now())
  email     String   @unique
  username  String   @unique
  avatarUrl String

  requestedFriendships Friendship[] @relation("requester")
  receivedFriendships  Friendship[] @relation("receiver")
}

model Friendship {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  nickname  String?
  
  userId    Int
  requester UserProfile @relation("requester", fields: [userId], references: [id], onDelete: Cascade)

  friendId  Int
  receiver  UserProfile @relation("receiver", fields: [friendId], references: [id], onDelete: Cascade)
  
  @@unique([userId, friendId])
}